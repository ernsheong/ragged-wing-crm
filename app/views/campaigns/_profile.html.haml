%h2= "Details"

%table.table.table-condensed
  %tr
    %td
      %i.icon-pencil
      Description
    %td= @campaign.description
  %tr
    %td
      %i.icon-calendar
      Start Date
    %td= @campaign.start_date.strftime('%A, %d %B %Y')
  %tr
    %td
      %i.icon-calendar
      End Date
    %td= @campaign.end_date.strftime('%A, %d %B %Y')
