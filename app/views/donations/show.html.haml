- if notice
  %p#notice= notice

%h1= "Details for this Donation"

%ul
  %li
    Donor Name:
    = "#{@donation.donor.first_name} #{@donation.donor.last_name}"
  %li
    Amount: 
    = @donation.amount
  %li
    Date: 
    = @donation.date
  %li
    Payment Method
    = @donation.payment_method
  %li
    Campaign
    = @donation.campaign
  %li
    Solicitation Method
    = @donation.solicitation_method

= link_to 'Edit', edit_donation_path(@donation)
= link_to 'Back', donations_path
