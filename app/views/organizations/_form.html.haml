= form_for(@organization, :html => { :class => "form-horizontal"} ) do |f|
  - if @organization.errors.any?
    #error_explanation
      %h2
        = pluralize(@organization.errors.count, "error")
        prohibited this organization from being saved:
      %ul
        - @organization.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    %legend Details
    %div.control-group
      = f.label :name, 'Organization Name', :class => "control-label"
      %div.controls
        = f.text_field :name, :class => "input-xlarge"
    %div.control-group
      = f.label :person, 'Contact Person', :class => "control-label"
      %div.controls.ui-widget
        = f.text_field :person, :class => "input-xlarge", :data => {:autocomplete => autocomplete_person_first_name_people_path}
    %div.control-group
      = f.label :website, :class => "control-label"
      %div.controls
        = f.text_field :website, :class => "input-xlarge", :placeholder => 'organization.org'
    %div.control-group
      = f.label :org_type, "Organization Type", :class => "control-label"
      %div.controls
        = f.select :org_type, options_for_select(Organization.org_types, @selected), :class => "input-xlarge"
  %fieldset
    %legend Address
    %div.control-group
      = label :address, :street, :class => "control-label"
      %div.controls
        = text_field :address, :street, :class => "input-xlarge"
    %div.control-group
      = label :address, :city, :class => "control-label"
      %div.controls
        = text_field :address, :city, :class => "input-xlarge"
    %div.control-group
      = label :address, :zip, :class => "control-label"
      %div.controls.docs-input-sizes
        = text_field :address, :zip, :class => "span1"
        = select :address, :state, options_for_select(Address.US_states, @state), {}, :class => "span1"
    %div.control-group
      = label :address, :country, :class => "control-label"
      %div.controls
        = select :address, :country, options_for_select(Address.countries, @country), :class => "input-xlarge"
  %div.actions
    = f.submit(class: "btn btn-primary")
