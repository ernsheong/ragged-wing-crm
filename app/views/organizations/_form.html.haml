= form_for(@organization) do |f|
  - if @organization.errors.any?
    #error_explanation
      %h2
        = pluralize(@organization.errors.count, "error")
        prohibited this organization from being saved:
      %ul
        - @organization.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :person
    %br/
    = f.number_field :person
  .field
    = f.label :address
    %br/
    = f.number_field :address
  .field
    = f.label :website
    %br/
    = f.text_field :website
  .field
    = f.label :org_type
    %br/
    = f.text_field :org_type
  .actions
    = f.submit
